<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="com.group12.encryptionator.controller.Login">
   <children>
      <Label fx:id="welcomeText" text="Welcome to JavaFX Application!" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button text="Login" onAction="#onLoginButtonClick" />
      <Hyperlink text="Register" onAction="#onRegisterLinkClick" />
   </children>
</VBox>