<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="com.ethan.encryptionator.controller.Register">
   <Label fx:id="infoText" text="Register for JavaFX Application!"/>
   <TextField fx:id="usernameField" promptText="Username"/>
   <PasswordField fx:id="passwordField" promptText="Password"/>
   <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
   <TextField fx:id="emailField" promptText="Email"/>
   <Button text="Register" onAction="#onRegisterButtonClick"/>
   <Button text="Back to Login" onAction="#onBackToLoginClick"/>
</VBox>